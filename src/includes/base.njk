<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <style>
        :root {
            --primary: #e94560;
            --secondary: #16213e;
            --accent: #0f3460;
            --text: #ffffff;
            --bg: #1a1a2e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            background: var(--bg);
            color: var(--text);
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, var(--secondary), var(--accent));
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--primary) 0%, transparent 50%);
            animation: pulse 8s infinite;
        }

        @keyframes pulse {
            0% { transform: translate(-50%, -50%) scale(0.8); opacity: 0.5; }
            50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.8; }
            100% { transform: translate(-50%, -50%) scale(0.8); opacity: 0.5; }
        }

        .section {
            padding: 5rem 0;
            position: relative;
        }

        .card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 2rem;
            margin: 1rem 0;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .skill-bar {
            width: 100%;
            height: 10px;
            background: var(--secondary);
            border-radius: 5px;
            margin: 1rem 0;
            position: relative;
            overflow: hidden;
        }

        .skill-progress {
            position: absolute;
            height: 100%;
            background: var(--primary);
            animation: slideIn 1.5s ease-out forwards;
        }

        @keyframes slideIn {
            from { width: 0; }
            to { width: var(--width); }
        }

        .nav-dots {
            position: fixed;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 1rem;
            z-index: 100;
        }

        .nav-dot {
            width: 12px;
            height: 12px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .nav-dot.active {
            background: var(--primary);
            transform: scale(1.3);
        }

        .button {
            display: inline-block;
            padding: 1rem 2rem;
            background: var(--primary);
            color: var(--text);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s ease;
            text-decoration: none;
        }

        .button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(233, 69, 96, 0.4);
        }

        .hero-contact {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            margin: 2rem 0;
        }

        .contact-link {
            color: var(--text);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: 0.3s ease;
        }

        .contact-link:hover {
            color: var(--primary);
        }

        .timeline {
            position: relative;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 100%;
            background: var(--primary);
        }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            margin: 0 auto;
        }

        .skills-grid .card:last-child {
            grid-column: 1 / -1;  /* Make the last card span both columns */
            max-width: 50%;       /* Limit the width */
            margin: 0 auto;       /* Center the last card */
        }

        @media (max-width: 768px) {
            .skills-grid {
                grid-template-columns: 1fr;
            }
            
            .skills-grid .card:last-child {
                grid-column: 1;
                max-width: 100%;
            }
        }

        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.8rem;
            margin-top: 1rem;
        }

        .skill-tag {
            background: rgba(233, 69, 96, 0.2);
            border: 1px solid var(--primary);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .skill-tag:hover {
            background: var(--primary);
            transform: translateY(-2px);
        }

        .card h3 i {
            margin-right: 0.5rem;
            color: var(--primary);
        }

        .card:hover h3 i {
            transform: scale(1.2);
            transition: transform 0.3s ease;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .date {
            color: var(--primary);
            font-size: 0.9rem;
        }

        h2 {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            color: var(--primary);
        }

        h3 {
            color: var(--text);
            margin-bottom: 1rem;
        }

        ul {
            list-style-position: inside;
            margin-left: 1rem;
        }

        li {
            margin-bottom: 0.5rem;
        }

        .title-text {
            font-size: 1.5rem;
            margin: 1rem 0;
        }

        @media (max-width: 768px) {
            .timeline::before {
                left: 0;
            }
            
            .hero-contact {
                justify-content: center;
            }
            
            .contact-grid {
                grid-template-columns: 1fr;
            }
        }

        .location {
            color: var(--primary);
            font-size: 0.9rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card h4 {
            color: #fff;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }

        .timeline .card {
            margin-bottom: 2rem;
            position: relative;
        }

        .timeline .card::before {
            content: '';
            position: absolute;
            width: 15px;
            height: 15px;
            background: var(--primary);
            border-radius: 50%;
            left: -7.5px;
            top: 50%;
            transform: translateY(-50%);
        }

        .card ul li {
            color: #e0e0e0;
            margin-bottom: 0.8rem;
            line-height: 1.6;
        }

        .card ul li::before {
            content: 'â€¢';
            color: var(--primary);
            font-weight: bold;
            display: inline-block;
            width: 1em;
            margin-left: -1em;
        }

        @media (max-width: 768px) {
            .timeline .card::before {
                display: none;
            }
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .social-icon {
            color: var(--text);
            font-size: 1.8rem;
            transition: all 0.3s ease;
            padding: 0.5rem;
        }

        .social-icon:hover {
            color: var(--primary);
            transform: translateY(-5px);
        }

        .contact-card {
            padding: 3rem 2rem;
        }

        /* Enhanced Fire Scrollbar with Particles */
        ::-webkit-scrollbar {
            width: 20px;
            background: #0a0a0a;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.6);
        }

        ::-webkit-scrollbar-thumb {
            background: 
                linear-gradient(
                    45deg,
                    #ff3800 0%,
                    #ff6000 25%,
                    #ff8100 50%,
                    #ffbe00 75%,
                    #ff3800 100%
                );
            border-radius: 10px;
            position: relative;
            animation: 
                fire-animation 3s infinite,
                fire-intensity 4s infinite;
            background-size: 200% 200%;
        }

        ::-webkit-scrollbar-thumb::before,
        ::-webkit-scrollbar-thumb::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb::before {
            background: 
                radial-gradient(
                    circle at center,
                    rgba(255, 230, 110, 0.5) 0%,
                    rgba(255, 140, 0, 0.5) 30%,
                    rgba(255, 69, 0, 0.5) 60%,
                    transparent 100%
                );
            filter: blur(4px);
            animation: flame-flicker 3s infinite;
        }

        ::-webkit-scrollbar-thumb::after {
            background: 
                linear-gradient(
                    transparent 50%,
                    rgba(255, 140, 0, 0.3) 60%,
                    rgba(255, 69, 0, 0.4) 70%,
                    rgba(255, 0, 0, 0.5) 80%,
                    transparent 100%
                );
            filter: blur(2px);
            animation: flame-rise 2s infinite;
        }

        ::-webkit-scrollbar-track {
            background: 
                linear-gradient(
                    to bottom,
                    #0a0a0a,
                    #1a0f0f 20%,
                    #2a1f1f 40%,
                    #1a0f0f 80%,
                    #0a0a0a 100%
                );
            box-shadow: 
                inset 0 0 20px rgba(255, 56, 0, 0.3),
                inset 0 0 30px rgba(255, 129, 0, 0.2);
        }

        ::-webkit-scrollbar-track::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                repeating-linear-gradient(
                    45deg,
                    transparent,
                    transparent 10px,
                    rgba(255, 56, 0, 0.1) 10px,
                    rgba(255, 56, 0, 0.1) 20px
                );
            animation: smoke-rise 20s infinite linear;
        }

        @keyframes fire-animation {
            0%, 100% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
        }

        @keyframes fire-intensity {
            0%, 100% {
                filter: brightness(1) saturate(1);
            }
            50% {
                filter: brightness(1.3) saturate(1.3);
            }
        }

        @keyframes flame-flicker {
            0%, 100% {
                opacity: 1;
                transform: scaleY(1);
            }
            50% {
                opacity: 0.8;
                transform: scaleY(1.1);
            }
        }

        @keyframes flame-rise {
            0% {
                transform: translateY(0) scaleY(1);
                opacity: 0.5;
            }
            50% {
                transform: translateY(-10px) scaleY(1.2);
                opacity: 0.8;
            }
            100% {
                transform: translateY(0) scaleY(1);
                opacity: 0.5;
            }
        }

        @keyframes smoke-rise {
            from {
                background-position: 0 0;
            }
            to {
                background-position: 0 -1000px;
            }
        }

        /* Hover effects */
        ::-webkit-scrollbar-thumb:hover {
            background: 
                linear-gradient(
                    45deg,
                    #ff5500 0%,
                    #ff7300 25%,
                    #ff9500 50%,
                    #ffcc00 75%,
                    #ff5500 100%
                );
            animation: 
                fire-animation 2s infinite,
                fire-intensity 2s infinite;
            box-shadow: 
                0 0 20px #ff3800,
                0 0 40px #ff8100,
                0 0 60px #ffbe00;
        }

        /* Firefox support */
        * {
            scrollbar-width: thin;
            scrollbar-color: #ff3800 #0a0a0a;
        }

        @supports (-moz-appearance: none) {
            * {
                --scrollbar-thumb: #ff3800;
                animation: firefox-fire 4s infinite;
            }

            @keyframes firefox-fire {
                0%, 100% { --scrollbar-thumb: #ff3800; }
                25% { --scrollbar-thumb: #ff6000; }
                50% { --scrollbar-thumb: #ff8100; }
                75% { --scrollbar-thumb: #ffbe00; }
            }
        }

        /* Mobile optimization */
        @media (max-width: 768px) {
            ::-webkit-scrollbar {
                width: 12px;
            }
        }
    </style>
</head>
<body>
    {{ content | safe }}
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });

        // Navigation dots
        const sections = document.querySelectorAll('.section');
        const navDots = document.querySelector('.nav-dots');

        sections.forEach((_, index) => {
            const dot = document.createElement('div');
            dot.classList.add('nav-dot');
            dot.addEventListener('click', () => {
                sections[index].scrollIntoView({ behavior: 'smooth' });
            });
            navDots.appendChild(dot);
        });

        // Update active dot on scroll
        window.addEventListener('scroll', () => {
            const dots = document.querySelectorAll('.nav-dot');
            sections.forEach((section, index) => {
                const rect = section.getBoundingClientRect();
                if (rect.top >= 0 && rect.top <= window.innerHeight / 2) {
                    dots.forEach(dot => dot.classList.remove('active'));
                    dots[index].classList.add('active');
                }
            });
        });
    </script>
</body>
</html> 